#
# For a description of the syntax of this configuration file,
# see doc/kconfig-language.txt.
#

menu "cm_backtrace"

    config ENABLE_CM_BACKTRACE
        bool "enable cm_backtrace module"
        default n
        ---help---
            enable cm_backtrace or not.

    if ENABLE_CM_BACKTRACE

        config ENABLE_DUMP_STACK_INFO
            bool "enable dump stack information"
            default n
            ---help---
                Enable dump stack information or not.

        config USE_FREERTOS_PLATFORM
            bool "Use freeRTOS platform"
            default y if ENABLE_FREERTOS
            default n
            ---help---
                Use freeRTOS platform or not.

    endif

endmenu

